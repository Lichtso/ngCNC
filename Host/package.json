{
  "name": "ngCNC",
  "version": "0.0.0-semantic-release",
  "description": "ngCNC web app host",
  "scripts": {
    "package": "npm-pkgbuild --npm-dist --npm-modules -t /data/binaries/arch-linux/packages/{{arch}} pkgbuild pacman makepkg"
  },
  "devDependencies": {
    "npm-pkgbuild": "^5.1.7"
  },
  "dependencies": {
    "gl-matrix": "^3.0.0",
    "node-hid": "^0.7.7",
    "serialport": "^7.1.1"
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h"
    ],
    "backup": "etc/${name}/config.json",
    "install": "pacman/install.sh",
    "installdir": "/services/${name}/Host",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "${installdir}/../UserInterface/": {
        "base": "../UserInterface"
      }
    },
    "depends": {
      "systemd": ">=241.0",
      "bossac": "1.3"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lichtso/ngCNC",
    "directory": "Host"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
