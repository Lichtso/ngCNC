{
  "name": "ngCNC",
  "version": "0.0.0-semantic-release",
  "description": "ngCNC web app host",
  "scripts": {
    "package": "npm-pkgbuild  --npm-dist --npm-modules -t /data/binaries/arch-linux/packages pkgbuild pacman makepkg"
  },
  "devDependencies": {
    "npm-pkgbuild": "^5.0.4"
  },
  "dependencies": {
    "gamepad": "^1.6.0",
    "gl-matrix": "^3.0.0"
  },
  "pacman": {
    "backup": "etc/${name}/config.json",
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "${installdir}/docroot/": "../UserInterface/**/*"
    },
    "depends": {
      "systemd": ">=240.0"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lichtso/ngCNC",
    "directory": "Host"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
