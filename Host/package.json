{
  "name": "ngCNC",
  "version": "0.0.0-semantic-release",
  "description": "ngCNC web app host",
  "script": {
    "package": "npm-pkgbuild pkgbuild pacman makepkg"
  },
  "devDependencies": {
    "npm-pkgbuild": "^5.0.1"
  },
  "dependencies": {
    "gamepad": "^1.6.0",
    "gl-matrix": "^3.0.0"
  },
  "pacman": {
    "installdir": "/services/ngCNC",
    "install": "pacman/install.sh",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lichtso/ngCNC",
    "directory": "Host"
  },
  "pacman": {
    "backup": "etc/${name}/config.json",
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    },
    "depends": {
      "systemd": ">=240.0"
    }
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
